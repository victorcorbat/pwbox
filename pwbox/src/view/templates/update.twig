{%  extends 'navbar.twig' %}
{%  block content %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/styles.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/styles_update.css">

    {% if mensaje==true %}

        <script>alert('Cambios realizados!')</script>

    {% endif %}

    <div class="container" id="update">
        <h3 id="login">Actualizar información</h3>

        {% if user['picture'] is not null %}
            <div class="form-group">

                <img src={{ user['picture'] }}>
                <button class="btn btn-primary" data-toggle="modal" data-target="#addFile">Actualizar foto de perfil</button>
            </div>

        {% else %}
            <div class="form-group">
                <button class="btn btn-primary" data-toggle="modal" data-target="#addFile">Subir foto de perfil</button>
            </div>
        {% endif %}

        <div class="modal fade" id="addFile" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Subir archivo</h4>
                    </div>

                    <form id="formAdd" method="post" action={{ "/uploadPic/" ~ user['id'] }}  enctype="multipart/form-data">
                        <!-- upload of a single file -->
                        <p>
                            <label>Añadir archivo: </label><br/>
                            <input type="file" name="file" accept="image/jpeg"/>
                        </p>
                        <div id="#contButton">
                            <button id="buttonAdd" class="btn btn-primary" type="submit">Subir</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
        <br>

        <form action="/profile" class="form-inline" method="post" onsubmit="return Validate()" name="vform">
            <label>Actualizar datos</label>

            <div class="form-group">
                <div class="input-group">
                    <label class="sr-only" for="email">Correo:</label>
                    <input class="form-control" name="email" id="email" type="email" value={{ user['email'] }}>
                </div>
                <div id="email_error" class="val_error"></div>
            </div>
            <br>

            {% if error["email"] is defined %}
                <p>{{ error["email"] }}</p>
            {% endif %}

            <button class="btn btn-primary">Enviar</button>
        </form>
        <br>

        <form action="/profile" class="form-inline" method="post" onsubmit="return ValidatePass()" name="vform2">

            <label>Actualizar contraseña</label>

            <div class="form-group" id="new_pass">
                <div class="input-group">
                    <label class="sr-only" for="password">Nueva contraseña:</label>
                    <input class="form-control" id="password" name="password" type="password" placeholder="Nueva contraseña">
                </div>
                <div id="password_error" class="val_error"></div>
            </div>

            {% if error["password"] is defined %}
                <p>{{ error["password"] }}</p>
            {% endif %}

            <div class="form-group" id="confirm_new_pass">
                <div class="input-group">
                    <label class="sr-only" for="password_confirmation">Confirmar nueva contraseña:</label>
                    <input class="form-control" id="password_confirmation" name="password_confirmation" type="password" placeholder="Confirma nueva contraseña">
                </div>
                <div id="password_confirmation_error" class="val_error"></div>
            </div>

            {% if error["passwords"] is defined %}
                <p>{{ error["passwords"] }}</p>
            {% endif %}

            <br>

            <button class="btn btn-primary">Enviar</button>

        </form>

        <button class="btn btn-primary" data-toggle="modal" data-target="#logOut">Log Out</button>

        <div class="modal fade" id="logOut" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Log Out</h4>
                    </div>
                    <form id="form-remove" action="/logout" class="form-inline" method="post">
                        <div class="modal-body">
                            <p id="mensaje">¿Salir de la cuenta?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" type="submit">Salir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <button id="buttonBorrar" class="btn btn-primary" data-toggle="modal" data-target="#removeUser">Eliminar cuenta</button>

        <div class="modal fade" id="removeUser" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Eliminar cuenta</h4>
                    </div>
                    <form id="form-remove" action="{{ "/remove_user/" ~ user['id'] }}" class="form-inline" method="post">
                        <div class="modal-body">
                            <p id="mensaje">¿Estás seguro que deseas eliminar tu cuenta?</p>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" type="submit">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <script type="text/javascript" src="{{ base_url() }}/assets/js/formUpdate.js"></script>

{% for message in messages %}
    <p>{{ message }}</p>
{% endfor %}
{% endblock %}

